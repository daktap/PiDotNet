@model IEnumerable<Data.Models.Anomaly>

@{
    ViewBag.Title = "List of anomalies for the doucment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of anomalies for the doucment " @Html.ViewData["document"] "</h2>

<p>
    @Html.ActionLink("Add an anomalie for this document", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleAnomaly)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAnomaly)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescAnomaly)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DocId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TitleAnomaly)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAnomaly)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescAnomaly)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocId)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AnomalyID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AnomalyID })
        </td>
    </tr>

}

</table>
@Html.ActionLink("Return to list of documents", "GoToDocument")

